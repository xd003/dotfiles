#
# wm independent hotkeys
#

# Reloads sxhkd configuration
super + Escape
  keeb-reset

# Right click menu
~button3
  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run

# Cheatsheet, terminal
super + {k,Return}
  {sxhkd-cheat,alacritty}

# GUI System monitor
ctrl + shift + Escape
  gnome-system-monitor

# Rofi app launcher
alt + F1
  applauncher  

# Rofi menu launcher(s)
super + {x,n,r}
  {powermenu,networkmanager_dmenu,runlauncher}

# Launch Applications
super + shift + {f,g,c,d,s,v}
  {thunar,geany,code,discord,spotify,virtualbox}

# Launch firefox
super + {w}
  {firefox}
 
# Randomize wallpaper
super + shift + w
  {nitrogen --set-zoom-fill --save --random Pictures/Wallpapers}

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
  volume{ --up, --down, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
  brightness{ --up, --down}

# Flameshot screenshot launcher
Print
  flameshot full -c -p /home/xd003/Pictures/Screenshots

# FFMPEG Screen Record
super + s
  screenrecord

#
# Screenshot exras
#

# Maim screenshot window
ctrl + Print
  win-shot

# Maim delayed screenshot
ctrl + shift + Print
  shot-delay

#
# BSPWM HOTKEYS
#

# Switch between external rule & default tiling
alt + space
  layout_switch

# Quit/Restart bspwm
super + shift + {q,r}
  bspc {quit,wm -r}

# Close Focused Window
alt + Down
  bspc node -c

# Set full screen
super + f
    bspc node -t "~"fullscreen
    
# Focus the next/previous active desktop in the current monitor
alt + {Left,Right}
 bspc desktop -f {prev,next}.occupied.local
 
# Focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
 
# Node focus and swapping on the same desktop
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# Focus the next/previous window in the current desktop
ctrl + {Left,Right}
  bspc node -f {next,prev}.local.!hidden.window
    
# move focused window to the next workspace and then switch to that workspace
alt + shift + {Left,Right}
  id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# resize windows i3 style
super + ctrl + {Left,Up,Down,Right}
	resize {x -, y +, y -, x +}

# Move focused window to new workspace
alt + Return
  workspace_from_window
