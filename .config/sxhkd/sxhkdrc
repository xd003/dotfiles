#
# wm independent hotkeys
#

# Reloads sxhkd configuration
super + Escape
  keeb-reset

# Right click menu
~button3
  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu_run

# Cheatsheet, terminal
super + {k,Return}
  {sxhkd-cheat,alacritty}

# GUI System monitor
ctrl + shift + Escape
  gnome-system-monitor

# Rofi app launcher
alt + F1
  applauncher  

# Rofi menu launcher(s)
super + {x,n,r}
  {powermenu,networkmanager_dmenu,runlauncher}

# Launch Applications
super + shift + {f,g,c,d,s,v}
  {thunar,geany,code,discord,spotify,virtualbox}

# Launch firefox
super + {w}
  {firefox}
 
# Randomize wallpaper
super + shift + w
  {nitrogen --set-zoom-fill --save --random Pictures/Wallpapers}

# Volume controls
XF86Audio{RaiseVolume,LowerVolume,Mute}
  volume{ --up, --down, --toggle}

# Brightness controls
XF86MonBrightness{Up,Down}
  brightness{ --up, --down}

# Flameshot screenshot launcher
Print
  flameshot full -c -p /home/xd003/Pictures/Screenshots

#
# Screenshot exras
#

# Maim screenshot window
ctrl + Print
  win-shot

# Maim delayed screenshot
ctrl + shift + Print
  shot-delay

#
# BSPWM HOTKEYS
#

# Switch between external rule & default tiling
super + alt
  layout_switch

# Quit/Restart bspwm
super + shift + {q,r}
  bspc {quit,wm -r}

# Close Focused Window
alt + Down
  bspc node -c

#
# state/flags
#

# Set full screen
super + f
    bspc node -t "~"fullscreen

# Change focus to next window, including floating window
alt + {_,shift + }Tab
  bspc node -f {next.local,prev.local}

# Center currently active window
super + KP_Insert
  center-window
 
#
# focus/swap
#

# Node focus and swapping on the same desktop
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# Focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# Focus the next/previous window in the current desktop
alt + space
 bspc node -f {next,prev}.local.!hidden.window
        
# Rotate windows
super + {r,KP_Divide}        
  bspc node @/ -R {90,90}

# Focus the next/previous active desktop in the current monitor
alt + {Left,Right}
 bspc desktop -f {prev,next}.occupied.local

# Focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# Focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{KP_End,KP_Down,KP_Next,KP_Left,KP_Begin,KP_Right,KP_Home}
	bspc {desktop -f,node -d} '^{1-7}'

#
# move/resize
#

# resize windows i3 style
super + ctrl + {Left,Up,Down,Right}
	resize {x -, y +, y -, x +}

# Move a floating window
super + ctrl {KP_End,KP_Down,KP_Begin,KP_Next}
	bspc node -v {-200 0,0 200,0 -200,200 0}
